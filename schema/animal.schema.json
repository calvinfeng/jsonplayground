{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "Animal",
    "description": "an animal in the Planet Zoo",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1
        },
        "name": {
            "type": "string"
        },
        "habitat": {
            "$ref": "habitat.schema.json"
        }
    },
    "required": ["id", "name", "habitat"]
}